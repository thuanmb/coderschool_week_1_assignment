<!DOCTYPE html>
<html>
<head>
    <title>Thuan's Restaurant</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'bootstrap', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'bootstrap_blue', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'bootstrap.min', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'bootstrap-notify.min', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name%> <%= action_name%>">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
                
                <div class="navbar-header">
                <button <button
                        type="button"
                        class="navbar-toggle collapsed"
                        data-toggle="collapse"
                        data-target="#navbar"
                        aria-expanded="false">
                <i class="fa fa-bars" style="color:#999;"></i>
                </button>
                <%= link_to 'Thuan\'s Restaurant', root_url, {:class => :'navbar-brand'} %>
            </div>
            <div id="navbar" class="navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="home"><%= link_to 'Home', root_url %></li>
                        <li class="menu"><%= link_to 'Menu', :controller => "welcome", :action => "menu" %></li>
                        <li class="contact_us"><%= link_to 'Contact', :controller => "welcome", :action => "contact_us" %></li>
                    </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <%= yield %>
    </div>

    <% if flash[:notice] %>
        <%= javascript_tag do %>
            $.notify("<%= flash[:notice] %>", { allow_dismiss: true, type: 'sucess' });
        <% end %>    
    <% end %>

    <% if flash[:alert] %>
        <%= javascript_tag do %>
            $.notify("<%= flash[:alert] %>", { allow_dismiss: true, type: 'danger' });
        <% end %>    
    <% end %>

</body>
</html>
